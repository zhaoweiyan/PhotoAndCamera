<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/dialog_gray"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_clear_cancirm"
            android:layout_width="@dimen/dp250"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp50"
            android:layout_marginRight="@dimen/dp50"
            android:background="@drawable/popu_cache"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp25"
            android:paddingRight="@dimen/dp25"
            android:paddingTop="@dimen/dp20">

            <TextView
                android:id="@+id/tv_commit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp20"
                android:gravity="center_horizontal"
                android:text="解除绑定"
                android:textColor="@color/zhi"
                android:textSize="@dimen/sp17"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_commit_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp20"
                android:lineSpacingExtra="@dimen/dp5"
                android:text="您是否确认解除绑定"
                android:textColor="@color/text_light_666666"
                android:textSize="@dimen/sp15"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/not_clear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="否"
                    android:textColor="@color/zhi"
                    android:textSize="@dimen/sp17" />

                <TextView
                    android:id="@+id/tv_lins"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp2"
                    android:layout_marginTop="@dimen/dp2"
                    android:background="@color/background" />

                <TextView
                    android:id="@+id/clear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="是"
                    android:textColor="@color/new_stroke"
                    android:textSize="@dimen/sp17" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_clear_succees"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/popu_cache"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="清除成功" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>